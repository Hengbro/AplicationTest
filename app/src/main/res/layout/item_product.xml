<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ly_main"
    style="@style/layout_clickable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/paddingNormal"
    android:paddingVertical="@dimen/paddingNormal"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardImage"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        app:cardCornerRadius="@dimen/cornerRadiusSmall"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textAppearance="@style/textAppearance.Body1.Bold"
                android:textColor="@color/gray3"
                android:textStyle="bold"
                tools:text="MM" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                tools:src="@tools:sample/avatars" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginBox"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAppearance="@style/textAppearance.Body2.Bold"
        tools:text="@tools:sample/full_names" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/totalVariant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginBox"
        android:maxLines="2"
        android:textAppearance="@style/textAppearance.Body3"
        tools:text="Total variant: 3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/totalStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTiny"
        android:maxLines="2"
        android:textAppearance="@style/textAppearance.Body3"
        tools:text="Total stock: 8" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginNormal"
            android:textAppearance="@style/textAppearance.Body3"
            tools:text="Rp 0"
            android:textColor="@color/colorPrimary"/>

</LinearLayout>